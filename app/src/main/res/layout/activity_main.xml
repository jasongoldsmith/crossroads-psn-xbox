<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="login.console.sample.MainActivity">

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login" />

    <Button
        android:id="@+id/message"
        android:layout_below="@id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PSN Message" />

    <Button
        android:id="@+id/group_message"
        android:layout_below="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PSN Group Message" />

    <Button
        android:id="@+id/xbox_login"
        android:layout_below="@+id/group_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XBox Login" />

    <Button
        android:id="@+id/xbox_msg"
        android:layout_below="@+id/xbox_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XBox Message" />

    <Button
        android:id="@+id/xbox_group_msg"
        android:layout_below="@+id/xbox_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XBox Group Message" />
</RelativeLayout>
